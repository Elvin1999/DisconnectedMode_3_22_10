<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid Name="myDataGrid1"></DataGrid>
        <DataGrid Name="myDataGrid2"></DataGrid>
        <Button Name="showBtn" Click="showBtn_Click" FontSize="30" FontWeight="ExtraBlack">Show</Button>
        <Button Name="updateBtn" Click="updateBtn_Click" FontSize="30" FontWeight="ExtraBlack">Update</Button>
    </StackPanel>
</Window>
